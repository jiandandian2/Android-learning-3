<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <!--1.图片-->
        <ImageView
            android:id="@+id/item_course_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic1"
            android:layout_gravity="center"/>
        <!--2.三行文字-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021Android从零入门到实战(Kotlin版)"
                android:textSize="18dp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/item_course_lable"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="12dp"

                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                app:backgroundTint="#FDF6E5"
                android:text="免费课程"
                android:textSize="14dp"
                android:textColor="#B49D70"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"/>

            <TextView
                android:id="@+id/item_course_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="已学50%"
                android:textSize="14dp"/>


        </LinearLayout>
        <!--3.更多图标-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon6"
            android:layout_gravity="bottom"/>
    </LinearLayout>

<!--灰色分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3"/>

</LinearLayout>